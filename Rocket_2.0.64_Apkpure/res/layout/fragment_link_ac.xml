<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/linear_layout" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:padding="@dimen/default_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="0.0dip" style="@style/RocketTheme.DefaultPanel">
                <LinearLayout android:orientation="vertical" android:id="@id/container_from_account" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/input_margin_bottom">
                    <TextView android:text="@string/label_select_from_account" style="@style/RocketTheme.InputLabel" />
                    <LinearLayout android:background="@drawable/bg_edit_text" android:layout_width="fill_parent" android:layout_height="wrap_content">
                        <Spinner android:id="@id/sp_from_account" style="@style/RocketTheme.Spinner" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@id/container_to_account" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView android:text="@string/label_select_to_account" style="@style/RocketTheme.InputLabel" />
                    <LinearLayout android:background="@drawable/bg_edit_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/input_margin_bottom">
                        <Spinner android:id="@id/sp_to_account" style="@style/RocketTheme.Spinner" />
                    </LinearLayout>
                </LinearLayout>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_amount" style="@style/RocketTheme.InputLabel" />
                <EditText android:id="@id/et_amount" android:hint="@string/prompt_amount" android:digits="\ 1234567890" android:inputType="number" app:drawableLeftCompat="@drawable/ic_amount" style="@style/RocketTheme.EditText" />
                <LinearLayout android:orientation="vertical" android:id="@id/container_form" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" />
                <Button android:id="@id/btn_submit" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="8.0dip" android:text="@string/action_submit" style="@style/RocketTheme.Button" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>