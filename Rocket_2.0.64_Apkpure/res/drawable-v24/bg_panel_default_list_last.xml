<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/bg_radius" android:bottomRightRadius="@dimen/bg_radius" />
            <solid android:color="#11333333" />
        </shape>
    </item>
    <item android:bottom="1.5dip">
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/bg_default_action" />
                    <corners android:bottomLeftRadius="@dimen/bg_radius" android:bottomRightRadius="@dimen/bg_radius" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ffffffff" />
                    <corners android:bottomLeftRadius="@dimen/bg_radius" android:bottomRightRadius="@dimen/bg_radius" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>