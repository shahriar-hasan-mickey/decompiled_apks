<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ind="http://schemas.android.com/apk/res-auto">
    <item android:state_pressed="true" ind:state_invalid_input="true">
        <layer-list>
            <item android:top="@dimen/default_input_field_height_without_the_divider">
                <shape>
                    <solid android:color="@color/default_input_field_error" />
                </shape>
            </item>
            <item android:bottom="@dimen/default_input_field_divider_height">
                <shape>
                    <solid android:color="@color/default_input_field_pressed_background" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/default_input_field_pressed_background" />
                </shape>
            </item>
            <item android:bottom="@dimen/default_input_field_divider_height">
                <shape>
                    <solid android:color="@color/default_input_field_disabled_background" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item ind:state_invalid_input="true">
        <layer-list>
            <item android:top="@dimen/default_input_field_height_without_the_divider">
                <shape>
                    <solid android:color="@color/default_input_field_error" />
                </shape>
            </item>
            <item android:bottom="@dimen/default_input_field_divider_height">
                <shape>
                    <solid android:color="@color/default_input_field_background" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true" android:state_pressed="true">
        <layer-list>
            <item android:top="@dimen/default_input_field_height_without_the_divider">
                <shape>
                    <solid android:color="@color/default_brand_1_color" />
                </shape>
            </item>
            <item android:bottom="@dimen/default_input_field_divider_height">
                <shape>
                    <solid android:color="@color/default_input_field_pressed_background" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item android:top="@dimen/default_input_field_height_without_the_divider">
                <shape>
                    <solid android:color="@color/default_brand_1_color" />
                </shape>
            </item>
            <item android:bottom="@dimen/default_input_field_divider_height">
                <shape>
                    <solid android:color="@color/default_input_field_background" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="@dimen/default_input_field_height_without_the_divider">
                <shape>
                    <solid android:color="@color/default_input_field_shadow" />
                </shape>
            </item>
            <item android:bottom="@dimen/default_input_field_divider_height">
                <shape>
                    <solid android:color="@color/default_input_field_pressed_background" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:top="@dimen/default_input_field_height_without_the_divider">
                <shape>
                    <solid android:color="@color/default_input_field_shadow" />
                </shape>
            </item>
            <item android:bottom="@dimen/default_input_field_divider_height">
                <shape>
                    <solid android:color="@color/default_input_field_background" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>