<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/defaultValueSelectorItemBackgroundPressedVariant" />
            <stroke android:width="@dimen/default_valueselector_border_thickness" android:color="@color/defaultValueSelectorItemBorderVariant" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/defaultValueSelectorItemBackgroundSelectedVariant" />
            <stroke android:width="@dimen/default_valueselector_border_thickness" android:color="@color/defaultValueSelectorItemBorderVariant" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/defaultValueSelectorItemBackgroundSelectedVariant" />
            <stroke android:width="@dimen/default_valueselector_border_thickness" android:color="@color/defaultValueSelectorItemBorderVariant" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/defaultValueSelectorItemBackgroundNormalVariant" />
            <stroke android:width="@dimen/default_valueselector_border_thickness" android:color="@color/defaultValueSelectorItemBorderVariant" />
        </shape>
    </item>
</selector>