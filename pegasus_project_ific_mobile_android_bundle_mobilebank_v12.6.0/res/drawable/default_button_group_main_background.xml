<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ind="http://schemas.android.com/apk/res-auto">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/success_80" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/success_m10" />
        </shape>
    </item>
    <item ind:state_incomplete="true">
        <shape>
            <solid android:color="@color/success_80" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/success" />
        </shape>
    </item>
</selector>