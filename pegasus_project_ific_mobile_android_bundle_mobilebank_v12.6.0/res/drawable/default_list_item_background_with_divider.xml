<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/default_list_item_background_pressed" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/transparent" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item android:top="@dimen/default_list_item_height_without_the_divider">
                <shape>
                    <solid android:color="@color/default_list_item_divider" />
                </shape>
            </item>
            <item android:bottom="@dimen/default_list_item_divider_height">
                <shape>
                    <solid android:color="@null" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>