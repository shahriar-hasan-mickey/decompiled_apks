<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/cin_sdk_color_cinematic" android:endColor="@color/cin_sdk_light_orange" android:angle="90.0" />
            <corners android:radius="50.0dip" />
            <stroke android:width="1.0dip" android:color="#177c7c7c" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/cin_sdk_gray" android:endColor="@color/cin_sdk_light_gray" android:angle="90.0" />
            <corners android:radius="50.0dip" />
            <stroke android:width="1.0dip" android:color="#177c7c7c" />
        </shape>
    </item>
</selector>