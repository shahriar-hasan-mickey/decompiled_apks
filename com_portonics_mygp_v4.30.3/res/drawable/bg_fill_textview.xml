<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/app_button_corner" />
            <solid android:color="@color/colorControlDisabled" />
        </shape>
    </item>
    <item>
        <ripple android:color="@color/black">
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/app_button_corner" />
                    <gradient android:startColor="@color/app_button_start" android:endColor="@color/app_button_end" android:angle="0.0" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>